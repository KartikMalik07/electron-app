{
  "name": "airavat",
  "version": "1.0.0",
  "description": "Airavat - AI-powered Individual Asian Elephant Identification using Siamese Neural Networks and YOLOv8",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "npm run build-win",
    "build-win": "electron-builder --win --publish=never",
    "build-win-with-models": "npm run download-models && electron-builder --win --publish=never",
    "build-win-portable": "electron-builder --win --config.win.target=portable --publish=never",
    "build-win-installer": "electron-builder --win --config.win.target=nsis --publish=never",
    "build-and-publish": "npm run download-models && electron-builder --win --publish=always",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "prebuild": "npm run setup-python-portable",
    "setup-python-portable": "node scripts/setup-python-portable.js",
    "download-models": "node scripts/download-models.js",
    "clean": "rimraf dist/ node_modules/ python-backend/venv/ python-backend/temp_*/ python-backend/*.log python-portable/",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint src/ --ext .js",
    "prepare-release": "npm run clean && npm install && npm run build-win-with-models"
  },
  "keywords": [
    "elephant",
    "identification",
    "AI",
    "machine-learning",
    "siamese-network",
    "yolov8",
    "computer-vision",
    "wildlife",
    "conservation",
    "pytorch",
    "electron"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/electron-app.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/electron-app/issues"
  },
  "homepage": "https://github.com/yourusername/electron-app#readme",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "extract-zip": "^2.0.1",
    "node-fetch": "^3.3.2",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "fs-extra": "^11.3.0"
  },
  "build": {
    "appId": "com.yourcompany.airavat",
    "productName": "Airavat",
    "copyright": "Copyright Â© 2024 Your Company",
    "directories": {
      "output": "dist/",
      "buildResources": "assets/"
    },
    "files": [
      "src/**/*",
      "python-backend/**/*",
      "python-portable/**/*",
      "assets/**/*",
      "models/**/*",
      "!python-backend/venv/",
      "!python-backend/temp_*/",
      "!python-backend/*.log",
      "!**/*.pyc",
      "!**/__pycache__/",
      "node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "start.sh",
        "to": "start.sh",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Your Company",
      "verifyUpdateCodeSignature": false,
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "extraResources": [
        {
          "from": "python-backend/",
          "to": "python-backend/",
          "filter": [
            "**/*",
            "!venv/",
            "!temp_*/",
            "!*.log"
          ]
        },
        {
          "from": "python-portable/",
          "to": "python-portable/",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "models/",
          "to": "models/",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Airavat",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "deleteAppDataOnUninstall": true,
      "include": "scripts/installer.nsh"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
