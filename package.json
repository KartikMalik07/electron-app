{
  "name": "airavat",
  "version": "1.0.0",
  "description": "Airavat - AI-powered Individual Asian Elephant Identification using Siamese Neural Networks and YOLOv8",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "npm run build-win",
    "build-win": "electron-builder --win",
    "build-win-portable": "electron-builder --win --config.win.target=portable",
    "build-win-installer": "electron-builder --win --config.win.target=nsis",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist/ node_modules/ python-backend/venv/ python-backend/temp_*/ python-backend/*.log",
    "setup-python": "cd python-backend && python -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint src/ --ext .js",
    "prepare-release": "npm run clean && npm install && npm run build",
    "release-v1": "npm version 1.0.0 && git tag v1.0.0 && git push origin v1.0.0",
    "release-v2": "npm version 2.0.0 && git tag v2.0.0 && git push origin v2.0.0"
  },
  "keywords": [
    "elephant",
    "identification",
    "AI",
    "machine-learning",
    "siamese-network",
    "yolov8",
    "computer-vision",
    "wildlife",
    "conservation",
    "pytorch",
    "electron"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/electron-app.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/electron-app/issues"
  },
  "homepage": "https://github.com/yourusername/electron-app#readme",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "fs-extra": "^11.2.0"
  },
  "build": {
    "appId": "com.yourcompany.airavat",
    "productName": "Airavat",
    "copyright": "Copyright Â© 2024 Your Company",
    "directories": {
      "output": "dist/",
      "buildResources": "assets/"
    },
    "files": [
      "src/**/*",
      "python-backend/**/*",
      "assets/**/*",
      "!python-backend/venv/",
      "!python-backend/temp_*/",
      "!python-backend/*.log",
      "!python-backend/models/*.pth",
      "!python-backend/models/*.pt",
      "!**/*.pyc",
      "!**/__pycache__/",
      "node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "start.sh",
        "to": "start.sh",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "publisherName": "Your Company",
      "verifyUpdateCodeSignature": false,
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "extraResources": [
        {
          "from": "python-backend/",
          "to": "python-backend/",
          "filter": [
            "**/*",
            "!venv/",
            "!temp_*/",
            "!*.log",
            "!models/*.pth",
            "!models/*.pt"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Airavat",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "deleteAppDataOnUninstall": true
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "yourusername",
        "repo": "electron-app",
        "private": false,
        "releaseType": "release"
      }
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
